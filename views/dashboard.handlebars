
<div class="row">
  <div class="col-auto">
    <h2>Welcome!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new post</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
     
      <div class="form-group">
        <label for="content-desc">content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit post </button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
  
    {{#each posts as |post|}}
      {{> post-details}}
    {{/each}}
  </div>
  {{/if}}
</div>

<script type="text/javascript" src="./js/profile.js"></script>